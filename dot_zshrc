# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH

export ZSH="$HOME/.oh-my-zsh"
export TMUX_PLUGIN_MANAGER_PATH="$HOME/.tmux/plugins"

ZSH_THEME="arrow"

# You may need to manually set your language environment
# export LANG=en_US.UTF-8
source_if_exists () {
    if test -r "$1"; then
        source "$1"
    fi
}

export EDITOR='nvim'
export TERM=screen-256color
export XDG_CONFIG_HOME=$HOME/.config
export GITUSER="gpproton"
export WORKSPACE=$HOME/personal
export COMPANY_SPACE=$HOME/drolx
export CUSTOMER_SPACE=$HOME/customers
export DOTFILES=$HOME/dots
export VAULT="$WORKSPACE/note-taking"
export SCRIPTS="$WORKSPACE/scripts"

plugins=(
    git
    archlinux
    zsh-autosuggestions
    zsh-syntax-highlighting
)

source_if_exists "$ZSH"/oh-my-zsh.sh

# Set-up icons for files/folders in terminal
alias ls='eza -a --icons'
alias ll='eza -al --icons'
alias lt='eza -a --tree --level=1 --icons'

# Set-up FZF key bindings (CTRL R for fuzzy history finder)
source <(fzf --zsh)

HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt appendhistory

export TERMCMD="kitty --title 'terminal filechooser'"

source_if_exists $HOME/.sharedrc

# bun completions
[ -s "/home/leanny/.bun/_bun" ] && source "/home/leanny/.bun/_bun"


# Load Angular CLI autocompletion.
source <(ng completion script)
